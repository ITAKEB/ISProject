<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemAccountCard"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:contentPadding="2dp"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_centerVertical="true"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/itemAccountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/itemAccountCount"
            android:maxWidth="100dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="Aguardiente"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemAccountCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeTextType="uniform"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="0"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/itemAccountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btAddLess"
            android:layout_toEndOf="@id/itemAccountTitle"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeTextType="uniform"
            android:padding="2dp"
            android:text="$3000"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btAddLess"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/btAddMore"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_less"
            android:drawableTint="@color/black"
            android:padding="2dp"
            app:strokeWidth="0.1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btAddMore"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/btInfo"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_more"
            android:drawableTint="@color/black"
            android:padding="2dp"
            app:strokeWidth="0.1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btDelete"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_delete"
            android:drawableTint="@color/black"
            android:padding="2dp"
            app:strokeWidth="0.1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btInfo"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/btDelete"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_info"
            android:drawableTint="@color/black"
            android:padding="2dp"
            app:strokeWidth="0.1dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>